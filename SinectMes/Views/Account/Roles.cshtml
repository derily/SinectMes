@model List<SinectMes.Models.ApplicationRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Data Tables
            <small>advanced tables</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Roles</h3>
            </div>
            <div class="box-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>角色名称</th>
                        <th>创建时间</th>
                        <th style="width: 140px">是否有效</th>
                        <th>操作</th>
                    </tr>
                    @for (int i=0;i<Model.Count;i++)
                    {
                        <tr>
                            <td>@(i + 1).</td>
                            <td>@Model[i].ChineseName</td>
                            <td>@Model[i].CreateTime.ToShortDateString()</td>
                            <td></td>
                            <td><a asp-controller="Account" asp-action="EditRole" asp-route-roleId="@Model[i].Id" class="btn btn-primary btn-sm">编辑</a></td>
                        </tr>
                    }
                </table>
            </div>
            </div>
</section>
   
</div>

